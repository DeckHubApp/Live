@using SlidableLive.Models.Live
@using SlidableLive.Services
@model SlidableLive.Models.Live.ShowSlideViewModel

@inject IIdentityPaths IdentityPaths

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>@Model.Title</title>
    <environment include="Development">
        <link rel="stylesheet" href="~/bootstrap4/bootstrap/bootswatch.css"/>
        <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet"/>
        <link href="~/lib/bootstrap-social/bootstrap-social.css" rel="stylesheet"/>
        <link rel="stylesheet" href="~/css/site.css"/>
        <link rel="stylesheet" href="~/css/slides.css"/>
    </environment>
    <environment exclude="Development">
        <link href="https://maxcdn.bootstrapcdn.com/bootswatch/4.0.0/darkly/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-p8bH4RlA/kdF4wbAoep+/6VeOQI2IAWa9zLjTIQbQLv2FuCjX/W/FkdYdeKISDvK"
              crossorigin="anonymous"
              asp-fallback-href="~/bootstrap4/bootstrap/bootswatch.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute"/>
        <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"
              integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN"
              crossorigin="anonymous"
              asp-fallback-href="~/lib/font-awesome/css/font-awesome.min.css"
              asp-fallback-test-class="fa-2x" asp-fallback-test-property="font-size" asp-fallback-test-value="2em"/>
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true"/>
        <link rel="stylesheet" href="~/css/slides.min.css" asp-append-version="true"/>
    </environment>
</head>
<body>
<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-lg-6 col-xl-8">
            <img class="img-fluid" src="/slides/@Model.Presenter/@Model.Slug/@Model.SlideNumber"/>
        </div>
        <div class="col-12 col-lg-6 col-xl-4">
            @if (Context.User.Identity.IsAuthenticated)
            {
                <ul class="nav nav-tabs" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="notes-tab" data-toggle="tab" href="#notes-pane" role="tab" aria-controls="notes" aria-selected="true">Notes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="questions-tab" data-toggle="tab" href="#questions-pane" role="tab" aria-controls="questions" aria-selected="false">Notes</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="notes-pane" role="tabpanel" aria-labelledby="notes-tab">
                        <form id="notes">
                            <label for="notesText" class="control-label">Notes:</label>
                            <textarea id="notesText" class="form-control full-height"></textarea>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </form>
                    </div>
                    <div class="tab-pane fade" id="questions-pane" role="tabpanel" aria-labelledby="questions-tab">
                        <form id="questions">
                            <label>Questions:</label>
                            <ul class="list-group" id="question-list">
                            </ul>
                            <label for="questionText" class="control-label">Ask a Question:</label>
                            <textarea id="questionText" class="form-control" rows="2"></textarea>
                            <button type="submit" class="btn btn-primary">Ask</button>
                        </form>
                    </div>
                </div>
            }
            else
            {
                <div class="row">
                    <div class="col-md-12">
                        <h3 class="text-center">Sign in to create Notes or ask Questions</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8 col-md-offset-2 col-sm-12">
                        <a href="@IdentityPaths.Login" class="btn btn-primary">Sign in or Register</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<div style="display: none">
    <div id="nav-controls">
        <button class="btn navbar-btn" id="first-btn">
            <span class="fa fa-step-backward"></span>
        </button>
        <button class="btn navbar-btn" id="previous-btn">
            <span class="fa fa-play fa-flip-horizontal"></span>
        </button>
        <button class="btn navbar-btn" id="next-btn">
            <span class="fa fa-play"></span>
        </button>
        <button class="btn navbar-btn" id="last-btn">
            <span class="fa fa-step-forward"></span>
        </button>
    </div>
</div>
@* ReSharper disable Html.PathError *@
<script src="/hub/signalr.js"></script>
<script src="/hub/hub.js"></script>
@* ReSharper restore Html.PathError *@
<script src="~/js/slidable.js" asp-append-version="true"></script>
</body>
</html>