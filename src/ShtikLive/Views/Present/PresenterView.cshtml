@model ShtikLive.Models.Present.PresenterViewModel

@{
    ViewBag.Title = "Presenter View";
}

<h2>Presenter View</h2>

<div class="row">
    <div class="col-md-12">
        <h3>Questions</h3>
        <ul class="list-group" id="questions">
            @foreach (var question in Model.Questions)
            {
                <li class="list-group-item" id="q@question.Id">
                    <span class="small"><strong>@question.User</strong></span>
                    <br>
                    <span>@question.Text</span>
                </li>
            }
        </ul>
    </div>

</div>

@section Scripts
{
    <environment include="Development">
        <script src="~/js/presenter.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/presenter.min.js" asp-append-version="true"></script>
    </environment>
}
